<hibernate-mapping>
    <class name="andrusyak.models.Car" table="lesson_10_02_cars">
        <id name="id" column="id">
            <generator class="identity"/>
        </id>
        <property name="name" column="name"/>

        <many-to-one name="engine"
                     column="engine_id"
                     class="andrusyak.models.Engine"/>

        <many-to-one name="transmission"
                     column="transmission_id"
                     class="andrusyak.models.Transmission"/>

        <many-to-one name="gearbox"
                     column="gearbox_id"
                     class="andrusyak.models.Gearbox"/>

        <many-to-one name="platform"
                     column="car_sales_platform_id"
                     class="andrusyak.models.CarSalesPlatform"/>
    </class>
</hibernate-mapping>